<div class="addrev">
<h2>Add a new review <%= session[:user_name] %></h2>

<%= form_for @review do |f| %>
	<p>
	<%= f.label :title %> <br />
	<%= f.text_field :title %> 
	</p>
	<p>
	<%= f.label :content %> <br />
	<%= f.text_area :content	%> 
	</p>
	<p>
<%= f.hidden_field :creator , :value => session[:user_name] %>
	</p>
	<p>
	<%= f.submit "Add a new review " %>
	</p>

<% end %>
</div>